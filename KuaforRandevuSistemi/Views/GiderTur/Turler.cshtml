@model GiderTur
@{
    ViewBag.Title = "GiderTur";
}

<div class="card card-primary card-outline">
    <div class="card-header p-0">
        <ul class="nav nav-pills ml-auto p-2">
            <li class="nav-item active"><a class="nav-link active" href="#tab_1" data-toggle="tab">Gider Türlerini Listele</a></li>
            <li class="nav-item"><a class="nav-link" href="#tab_2" data-toggle="tab">Yeni Gider Türü Ekle</a></li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content">
            <div class="tab-pane active" id="tab_1">
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th></th>
                            <th>Tür Adı</th> 
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (GiderTur tur in (List<GiderTur>)ViewBag.TurListe)
                        {
                            <tr>
                                <td></td>
                                <td>@tur.ad</td>
                                <td>
                                    <a href="/GiderTur/Duzenle/@tur.turID" class="btn btn-sm btn-info">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="/GiderTur/Sil/@tur.turID" class="btn btn-sm btn-danger">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="tab-pane" id="tab_2">
                <div class="card">
                    <div class="card-header">
                        <table style="width:100%;">
                            <tr>
                                <td>
                                    <h3>Gider Türü Ekle</h3>
                                </td>
                                <td style="text-align:right;">
                                </td>
                            </tr>
                        </table>
                    </div>

                    <div class="card-body">
                        @using (Html.BeginForm("Ekle", "Turler", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label for="ad">Gider Tür Adı</label>
                                @Html.TextBoxFor(x => x.ad, new { @class = "form-control", @placeholder = "Tür Adını Giriniz" })

                            </div>
                            
                            <button type="submit" class="btn btn-primary">Ekle</button>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

