
@{
    ViewBag.Title = "Izin Duzenle";
}

@model Izin


<div class="card card-primary card-outline">
    
        <div class="card-header">
            <h3> Personel İzin Bilgilerini Düzenle </h3>
        </div>

        <div class="card-body">
            @using (Html.BeginForm("Duzenle", "Izin", FormMethod.Post, new { enctype = "multipart/form-data" })) //enctype = multiport.. resim, ses gibi dosyalar ekleneceği zaman
            {
                @Html.HiddenFor(x => x.izinID)
                <div class="form-group">
                    <label for="ad">Ad</label>
                    @Html.TextBoxFor(x => x.Kullanici.ad, new { @class = "form-control", @placeholder = "Personel Adını Giriniz" })
                </div>
                <div class="form-group">
                    <label for="soyad">Soyad</label>
                    @Html.TextBoxFor(x => x.Kullanici.soyad, new { @class = "form-control", @placeholder = "Personel Soyadını Giriniz" })

                </div>

                <div class="form-group">
                    <label for="izinBaslama">İzin Başlama Tarihi </label>
                    @Html.TextBoxFor(x => x.baslamaTarihi, "{0:yyyy-MM-dd}", new { @class = "form-control col-sm-3", placeholder = "İzin Başlama Tarihi Giriniz", type="date" })
                </div>
                <div class="form-group">
                    <label for="izinBitis">İzin Bitiş Tarihi</label>
                    @Html.TextBoxFor(x => x.bitisTarihi, "{0:yyyy-MM-dd}", new { @class = "form-control col-sm-3", placeholder = "İzin Bitiş Tarihi Giriniz", type = "date"})
                </div>

                <button type="submit" class="btn btn-primary">Kaydet</button>
            }

        </div>
    
</div>


