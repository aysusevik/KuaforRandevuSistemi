@{
    Musteri m = (Musteri)Session["Musteri"];
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    @*<title>Kuaför Randevu Sistemi</title>*@
    <title>@ViewBag.Title</title>

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/Content/AdminTema/plugins/fontawesome-free/css/all.min.css">

    <!-- Theme style -->
    <link rel="stylesheet" href="/Content/AdminTema/dist/css/adminlte.min.css">

    @RenderSection("css", false)
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/MusteriIslem/Anasayfa" class="brand-link">
                @*<img src="dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                    style="opacity: .8">*@
                <span class="brand-text font-weight-light">Kuaför Randevu Sistemi</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/Content/AdminTema/dist/img/avatar2.png" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">@m.ad @m.soyad</a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                        <li class="nav-item">
                            <a href="/MusteriIslem/Anasayfa" class="nav-link">
                                <i class="nav-icon fas fa-home"></i>
                                <p> Ana Sayfa </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/MusteriRandevu/Randevular" class="nav-link">
                                <i class="nav-icon fas fa-calendar-alt"></i>
                                <p>Randevu Bilgileri</p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/Login/Cikis" class="nav-link">
                                <i class="nav-icon fas fa-sign-out-alt"></i>
                                <p>Çıkış</p>
                            </a>
                        </li>



                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">

            <!-- Main content -->
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12" style="padding-top:10px;">
                            @if (TempData["Sonuc"] != null)
                            {
                                if ((bool)TempData["Sonuc"] == true)
                                {
                                    <div class="alert alert-success alert-dismissible">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                        <h5><i class="icon fas fa-check"></i> Uyarı</h5>
                                        İşlem başarıyla gerçekleştirildi.
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-danger alert-dismissible">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                        <h5><i class="icon fas fa-ban"></i> Uyarı!</h5>
                                        İşlem gerçekleştirilirken bir hata oluştu.
                                    </div>
                                }
                            }

                            @if (TempData["MusteriSil"] != null)
                            {
                                if (TempData["MusteriSil"].ToString() == "randevuVar")
                                {
                                    <div class="alert alert-danger alert-dismissible">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                        <h5><i class="icon fas fa-ban"></i> Uyarı!</h5>
                                        Silmeye çalıştığınız müşteriye ait randevu kaydı bulunmaktadır. İsterseniz müşteri durumunu pasif yapabilirsiniz.
                                    </div>
                                }
                            }

                            @RenderBody()
                        </div>
                    </div>
                    <!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="/Content/AdminTema/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/Content/AdminTema/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/Content/AdminTema/dist/js/adminlte.min.js"></script>

    @RenderSection("js", false)
</body>
</html>
