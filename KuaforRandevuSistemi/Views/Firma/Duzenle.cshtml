@model Firma



<div class="card card-primary card-outline">

    <div class="card-header">
        <h3>Firma Bilgilerini Düzenle</h3>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Duzenle", "Firma", FormMethod.Post, new { enctype = "multipart/form-data" })) //enctype = multiport.. resim, ses gibi dosyalar ekleneceği zaman
        {
            @Html.HiddenFor(x => x.firmaID)
            <div class="form-group">
                <label for="ad">Firma Adı</label>
                @Html.TextBoxFor(x => x.ad, new { @class = "form-control", @placeholder = "Firma Adı Giriniz" })

            </div>
            <div class="form-group">
                <label for="adres">Adres Bilgisi</label>
                @Html.TextAreaFor(x => x.adres, new { @class = "form-control", placeholder = "Adres Bilgisi Giriniz", rows = "3" })
            </div>
            <div class="form-group">
                <label for="telefon">İletişim Bilgisi</label>
                @Html.TextBoxFor(x => x.telefon, new { @class = "form-control", placeholder = "Telefon Numarası Giriniz" })
            </div>

            <button type="submit" class="btn btn-primary">Kaydet</button>
        }

    </div>

</div>

